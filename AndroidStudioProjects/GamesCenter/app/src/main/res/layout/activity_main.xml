<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title of the App -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@android:color/black" />

    <!-- Log In Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Button for 2048 Game -->
    <Button
        android:id="@+id/btn2048"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play 2048"
        android:layout_marginTop="64dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:layout_below="@id/tvTitle" />

    <!-- Button for Rubik's Cube Game -->
    <Button
        android:id="@+id/btnRubiksCube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Rubik's Cube"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:layout_below="@id/btn2048" />

    <!-- Button to View Scores -->
    <Button
        android:id="@+id/btnScores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Scores"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textColor="@android:color/white"
        android:layout_below="@id/btnRubiksCube" />
</RelativeLayout>
